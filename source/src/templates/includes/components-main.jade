-var componentsList = [{title: "фитинги", name:"fittings"},{title: "компрессор", name:"compressor"},{title:"манометр", name:"indicator"},{title:"управление", name:"management"},{title:"влагоотделитель",name:"water-filter"},{title:"трубка", name:"tube"},{title:"трубка", name:"reciever"},{title:"пневморессоры",name:"pneumatic spring"}];

mixin components-card(folder)
    div.card-group.col-12.col-sm-6.col-lg-3.mb-1.mb-sm-4.text-center
        div.card.component-group.shadow-drop-2-center
            div.card-header
                span.card-title.component-group__title= folder.title
            div.card-body
                a(href="pages/" + folder.name + ".html")
                    img.card-img.component-group__img(src="/dist/img/components/" + folder.name + ".jpg")

section.kit
    h2.kit__title.my-5.text-center Комплекты
    div.kit__gallery.d-flex.flex-wrap
        for folder in componentsList
            +components-card(folder)